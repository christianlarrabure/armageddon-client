{
  "name": "unofficial-armageddon-client",
  "version": "0.0.1",
  "main": "app.js",
  "description": "A MUD client for Armageddon MUD.",
  "author": {
    "name": "Deskoft",
    "email": "christianlarrabure@gmail.com",
    "url": "https://github.com/christianlarrabure"
  },
  "build": {
    "appId": "com.armageddon.unofficialclient",
    "productName": "Unofficial Armageddon Client",
    "mac": {
      "category": "public.app-category.lifestyle"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    }
  },
  "scripts": {
    "ng": "ng",
    "start": "ng build && electron . --trace-warnings",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "ng build",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder --mac --windows --linux --publish always"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/router": "^14.0.0",
    "@ng-icons/core": "^22.3.0",
    "@ng-icons/heroicons": "^22.3.0",
    "@ng-icons/ionicons": "^22.4.0",
    "@ng-icons/jam-icons": "^22.3.0",
    "@ng-icons/material-icons": "^22.3.0",
    "@pixi/tilemap": "^3.2.2",
    "@types/electron": "^1.6.10",
    "ansi-to-html": "^0.7.2",
    "dpkg": "^1.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "nagu": "^1.0.0",
    "ng-terminal": "^5.2.0",
    "ngx-quill": "^19.0.1",
    "pixi-viewport": "^4.36.0",
    "pixi.js": "^6.5.6",
    "quill": "^1.3.7",
    "rxjs": "~7.5.0",
    "sequelize": "^6.24.0",
    "sqlite3": "^5.1.2",
    "strip-ansi": "^7.0.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.1",
    "@angular/cli": "~14.2.7",
    "@angular/compiler-cli": "^14.0.0",
    "@electron-forge/cli": "^6.0.0-beta.67",
    "@electron-forge/maker-deb": "^6.0.0-beta.67",
    "@electron-forge/maker-rpm": "^6.0.0-beta.67",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.67",
    "@electron-forge/maker-zip": "^6.0.0-beta.67",
    "@types/express": "^4.17.1",
    "@types/jasmine": "~4.0.0",
    "@types/offscreencanvas": "^2019.7.0",
    "@types/quill": "^1.3.10",
    "autoprefixer": "^10.4.12",
    "electron": "^21.1.1",
    "electron-builder": "^23.6.0",
    "install": "^0.13.0",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "ng-cli": "^0.7.0",
    "npm": "^8.19.2",
    "postcss": "^8.4.17",
    "tailwindcss": "^3.1.8",
    "typescript": "~4.7.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "client"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "maintainer": "Deskoft",
              "homepage": "https://github.com/christianlarrabure"
            }
          }
        }
      ]
    }
  }
}
